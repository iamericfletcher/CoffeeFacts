<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel='stylesheet' href='/stylesheets/style.css'/>
    <title>Edit Your Fact</title>
</head>
<body>
<%- include('partials/nav') %>
<h1>Edit Your Fact</h1>
<form action="/editFact/<%= fact.id %>" method="post">
    <div class="form-group">
        <label for="edit-fact">Fact:</label>
        <input type="text" id="edit-fact" name="fact" value="<%= fact.fact %>" required>
    </div>
    <div class="form-group">
        <label for="edit-source">Source:</label>
        <input type="text" id="edit-source" name="source" value="<%= fact.source %>" required>
    </div>
    <button type="submit" class="btn">Update</button>
</form>
</body>
</html>
